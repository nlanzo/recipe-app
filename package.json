{
  "name": "recipe-app",
  "private": true,
  "version": "1.0.0",
  "description": "A recipe sharing application",
  "main": "src/server/server.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cross-env NODE_ENV=development tsx watch src/server/server.ts",
    "build": "vite build",
    "build:server": "tsc -p tsconfig.server.json && npm run copy-files",
    "copy-files": "tsx scripts/copy-files.js",
    "start": "node dist/server/server.js",
    "test": "jest",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:generate": "cross-env NODE_ENV=development drizzle-kit generate",
    "db:push": "cross-env NODE_ENV=development drizzle-kit push",
    "db:generate:prod": "cross-env NODE_ENV=production drizzle-kit generate",
    "db:push:prod": "cross-env NODE_ENV=production drizzle-kit push",
    "db:studio": "cross-env NODE_ENV=development drizzle-kit studio",
    "install:prod": "npm install --omit=dev"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.696.0",
    "@aws-sdk/lib-storage": "^3.696.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.1.0",
    "@mui/icons-material": "^6.1.5",
    "@mui/material": "^6.1.5",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.17",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "openai": "^4.90.0",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.27.0",
    "ts-node": "^10.9.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9"
  }
}
