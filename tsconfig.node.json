{
  "extends": "./tsconfig.json", // Inherit from the base configuration
  "compilerOptions": {
    "composite": true, // Enable project references for faster builds
    "target": "ES6", // Use ES6 as the output target for Node.js
    "module": "CommonJS", // CommonJS is the default module system for Node.js
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "lib": ["ESnext"], // Include Node.js and ESNext features
    "types": ["node"], // Include type definitions for Node.js
    "outDir": "./dist", // Specify the output directory for compiled files
    "resolveJsonModule": true // Allow importing JSON files as modules
  },
  "include": [
    "src/**/*", // Include all backend source files
    "typings/**/*.d.ts" // Include any custom type definitions
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from being included
  ]
}
